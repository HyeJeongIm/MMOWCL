{
  "dataset": "mmea-tbn",
  "modality": ["RGB", "Gyro", "Acce"],
  "model_name": "tbnewc",
  
  "backbone": "tbn",
  "arch": "BNInception",
  "midfusion": "concat",
  "consensus_type": "avg",
  "before_softmax": true,
  
  "train_list": "mydataset_train.txt",
  "val_list": "mydataset_test.txt",
  "mpu_path": "./datasets/UESTC-MMEA-CL/mpu/",
  
  "num_segments": 8,
  "batch_size": 8,
  "workers": 4,
  "dropout": 0.5,
  
  "lr": 0.001,
  "lr_steps": [10, 20],
  "momentum": 0.9,
  "weight_decay": 0.0005,
  "epochs": 1, 
  "clip_gradient": 20,
  
  "memory_size": 320,
  "init_cls": 2,
  "increment": 2,
  "shuffle": false,
  
  "partialbn": true,
  "freeze": false,
  
  "enable_ood": true,
  "ood_methods": ["MSP", "ODIN", "Energy"],
  
  "seed": 1993,
  "device": [0],
  "prefix": "mmowcl"
}